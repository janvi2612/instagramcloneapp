<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Custom_text_style_18sp_gray">
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textSize">18sp</item>
        <item name="lineHeight">21sp</item>
        <item name="android:textColor">@color/text_gray</item>
    </style>
    <style name="Custom_text_style_15sp">
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textSize">15sp</item>
        <item name="lineHeight">18sp</item>
    </style>
    <style name="Custom_Edit_Text">
        <item name="android:background">@drawable/custome_edit_text</item>
        <item name="android:minHeight">42dp</item>
        <item name="android:textColorHint">@color/hint_color</item>
        <item name="android:textSize">13sp</item>
        <item name="lineHeight">15sp</item>
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="android:paddingHorizontal">18dp</item>
        <item name="android:paddingVertical">13dp</item>
        <item name="android:textCursorDrawable">@drawable/custome_edite_text_cursor</item>
    </style>
    <style name="Custom_Button_Style" parent="TextAppearance.AppCompat.Button">
        <item name="android:textAlignment">center</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:minHeight">35dp</item>
        <item name="android:textSize">15sp</item>
        <item name="lineHeight">18sp</item>
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="colorOnBackground">@drawable/btn_selector</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:paddingVertical">10dp</item>
    </style>
</resources>