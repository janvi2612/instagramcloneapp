<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="variable"
            type="com.example.instagramclone.model.Profile" />
    </data>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="16dp"
    android:layout_marginTop="7dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardViewStationary"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:elevation="8dp"
        style="@style/Circular"
        app:cardCornerRadius="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/ig_story_highlight">


            <com.google.android.material.card.MaterialCardView
                style="@style/Widget.MaterialComponents.CardView_"
                android:layout_width="60dp"
                android:layout_height="60dp"

                android:elevation="8dp"
                app:cardCornerRadius="50dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white">

                    <com.google.android.material.card.MaterialCardView
                        style="@style/Widget.MaterialComponents.CardView_"
                        android:layout_width="55dp"
                        android:layout_height="55dp"
                        android:elevation="8dp"
                        app:cardCornerRadius="50dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <com.google.android.material.imageview.ShapeableImageView
                            android:id="@+id/image_"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:elevation="10dp"
                            app:strokeWidth="2dp"
                            android:src="@drawable/dog_1" />

                    </com.google.android.material.card.MaterialCardView>
                </androidx.constraintlayout.widget.ConstraintLayout>

            </com.google.android.material.card.MaterialCardView>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>

    <TextView
        android:id="@+id/textitem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text_here"
        android:textStyle="normal"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@id/cardViewStationary"
        app:layout_constraintEnd_toEndOf="@id/cardViewStationary"
        app:layout_constraintTop_toBottomOf="@id/cardViewStationary"
        android:layout_marginTop="4dp"
        android:textColor="@color/black"

        />

</androidx.constraintlayout.widget.ConstraintLayout>
</layout>